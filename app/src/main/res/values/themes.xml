<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Samachar" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/color_main</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppSplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_main</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_icon</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Samachar</item>
        <item name="android:statusBarColor" >@color/color_main</item>
        <item name="android:navigationBarColor">@color/color_main</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="fontFamily">@font/akaya_telivigala_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Theme.Samachar" parent="Base.Theme.Samachar" />
</resources>