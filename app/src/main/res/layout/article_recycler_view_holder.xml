<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/cream"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/article_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_unavailable"
            app:shapeAppearance="@style/ArticleImageStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/article_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginEnd="16dp"
                tools:text="This is the title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="16dp">
                <TextView
                    android:id="@+id/article_source_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="1.5"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Article source"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:text="@string/dash"/>
                <TextView
                    android:id="@+id/article_author_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:textStyle="bold"
                    tools:text="Author name"/>
            </LinearLayout>
            <TextView
                android:id="@+id/article_description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                tools:text="Article Description"
                tools:ignore="VisualLintLongText" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>